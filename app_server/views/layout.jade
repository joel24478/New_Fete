doctype html
html(ng-app='feteModule')
  block head
    meta(name='viewport', content='width=device-width, initial-scale=1.0')
    title= title
    link(rel='stylesheet', href='/bootstrap/css/bootstrap.min.css')
    link(rel='stylesheet', href='/bootstrap/css/grayscale.css')
    link(rel='stylesheet', href='/stylesheets/style.css')
    link(rel='stylesheet', href='/stylesheets/jquery-ui.css')
    script(src='/bootstrap/js/jquery.js')
    script(src='/bootstrap/js/bootstrap.min.js')
    script(src='/javascripts/tabsHandler.js')
    script(src='/javascripts/jquery-ui.js')
    script(src='/javascripts/mapHandler.js')
    script(src='/javascripts/postHandler.js')
    script(src="https://maps.googleapis.com/maps/api/js?callback=initMap", async defer)
    //Angular
    script(src='/angular/angular.min.js')
    script(src="//ajax.googleapis.com/ajax/libs/angularjs/1.5.3/angular-messages.js")
    script(src='/angular/feteModule.js')

  body(background=background)
    //Nav-bar
    nav.navbar.navbar-default.navbar-fixed-top(role='navigation')
      .container-fluid
        //The title including logo and functionality 
        .navbar-header
          button.navbar-toggle.collapsed(type='button', data-toggle='collapse', data-target='#fete-navbar')
            span.sr-only Toggle navigation
            span.icon-bar
            span.icon-bar
            span.icon-bar
          a.navbar-brand(href='/') Fete
        #fete-navbar.collapse.navbar-collapse
          ul.nav.navbar-nav
            li
              a(href='#') Request
            li
              a(href='#') Notifications
            li.dropdown
              a.dropdown-toggle(href='#', data-toggle='dropdown')
                | Account 
                span.caret
              ul.dropdown-menu(role='menu')
                li
                  a(href='/profile') Profile
                li
                  a(href='/followers') Followers
            li
              a(href='/index') About
          form.navbar-form.navbar-left(role='search')
            .form-group
              input.form-control.search-bar(type='text', placeholder='Search')
            button.btn.btn-default.btn-search(type='submit') Search
          ul.nav.navbar-nav.navbar-right
            li
              a.nav-links(href="/signup")
                p.navbar-text.md-font Join Fete Today!
            li.dropdown
              a.dropdown-toggle(href='#', data-toggle='dropdown')
                b Login
                span.caret
              ul#login-dp.dropdown-menu.hidden-sm-down
                li
                  .row
                    .col-md-12
                      | Login via
                      .social-buttons
                        a.btn.btn-fb(href='#')
                          i.fa.fa-facebook
                          |  Facebook
                        a.btn.btn-tw(href='#')
                          i.fa.fa-twitter
                          |  Twitter
                      |                                 or
                      form#login-nav.form(role='form', method='post', action='login', accept-charset='UTF-8')
                        .form-group
                          label.sr-only(for='exampleInputEmail2') Email address
                          input#exampleInputEmail2.form-control(type='email', placeholder='Email address', required='')
                        .form-group
                          label.sr-only(for='exampleInputPassword2') Password
                          input#exampleInputPassword2.form-control(type='password', placeholder='Password', required='')
                          .help-block.text-right
                            a(href='') Forget the password ?
                        .form-group
                          button.btn.btn-primary.btn-block(type='submit') Sign in
                        .checkbox
                          label
                            input(type='checkbox')
                            |  keep me logged-in
                    .bottom.text-center
                      | New here ? 
                      a(href='/signup')
                        b Join Us

   .container
     block content

   block footer
     footer
        .container.text-center
          hr
          .row
            .col-lg-12.col-xs-4
              .col-md-3.col-lg-6.col-xs-4
                ul.nav.nav-pills.nav-stacked
                  li
                    a(href='#') About us
                  li
                    a(href='#') Blog
              .col-md-3.col-lg-6.col-xs-4
                ul.nav.nav-pills.nav-stacked
                  li
                    a(href='#') Product for Mac
                  li
                    a(href='#') Developer API
          hr
          .row
            .col-lg-12
              ul.nav.nav-pills.nav-justified
                li
                  &copy; Z'heondre Calcano, Joel Cruz 2016.
                li
                  a(href='#') Terms of Service
                li
                  a(href='#') Privacy