        .col-lg-4.col-md-0.col-sm-0.scrollPanelRight
          .panel.with-nav-tabs.panel-default
            .panel-heading2
              ul.nav.nav-tabs#tabs
                li.active
                  a(href='#mapByDistance', data-toggle='tab') Distance
                li
                  a(href='#mapByTime', data-toggle='tab') Time
                li
                  a(href='#mapByGroup', data-toggle='tab') Group
            .panel-body
              .tab-content
                #mapByDistance.tab-pane.fade.in.active
                  div#map
                #mapByTime.tab-pane.fade
                  div#map
                #mapByGroup.tab-pane.fade
