extends layout

block append head
  link(rel='stylesheet', href='/stylesheets/home.css')  
  link(rel='stylesheet', href='/stylesheets/datepicker.css')
  script(src='/javascripts/dateHandler.js')
block content
 .container#post(style='margin-top:100px;')
  #template
    .row
      .col-lg-8.postPanel
        .panel-body#blackText
          .panel-content
            .panel-textarea(rows='4')
              textarea
              .row
                .col-md-3
                  .input-group Location
                    input(type='text')
                .col-md-3
                  .input-group Date  
                    input#datePicker(type='text')
                .col-md-3
                  .input-group Time
                    input(type='text')
                .col-md-2
                  .input-group Public  
                    input(type='checkbox') 
                  .input-group Private 
                    input(type='checkbox') 
                .col-md-2
                  button.btn.btn-default(type='submit') Post Event
      .col-lg-8.scrollPanelLeft
        .panel.panel-default
          .panel-heading
            img.img-circle.pull-left(src='#{profilePicture}', alt='#{username}')
            h3 #{username}
            h5
              span Shared #{sharing}
              |  - 
              span #{eventDate}
          .panel-body
            p
              | #{eventDescription}
          .panel-footer
            button.btn.btn-default(type='button')
              span.glyphicon.glyphicon-plus
            button.btn.btn-default(type='button')
              span.glyphicon.glyphicon-share-alt
            button.btn.btn-default(type='button', data-toggle='collapse', href='#collapseTextArea') Add a Comment
            div.panel-collapse.collapse#collapseTextArea
              .panel-textarea(rows='4')
                textarea
