extends layout

block append head 
  link(rel='stylesheet', href='/stylesheets/followers.css')
  link(rel='stylesheet', href='/stylesheets/profile.css')
  script(src='/javascripts/postHandler.js')

block content
  .container(style='margin-top:100px;' ng-controller="followerCtrl")
    .row 
      h1#blackText #{title}
      div
        .col-xs-4.col-lg-4(ng-repeat="follower in data.followers")
          .username-padding
            {{follower.username}}
          a.thumb(href='/{{follower.username}}')
            img.img-circle.pull-left(src='{{follower.profilePicture}}', alt='{{follower.username}}')

