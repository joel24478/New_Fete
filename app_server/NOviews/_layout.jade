doctype html
html(ng-app='feteApp') 
  block head
    meta(name='viewport', content='width=device-width, initial-scale=1.0')
    title= title
    link(rel='stylesheet', href='/bootstrap/css/bootstrap.min.css')
    link(rel='stylesheet', href='/bootstrap/css/grayscale.css')
    link(rel='stylesheet', href='/stylesheets/style.css')
    link(rel='stylesheet', href='/stylesheets/jquery-ui.css')
    script(src='/bootstrap/js/jquery.js')
    script(src='/bootstrap/js/bootstrap.min.js')
    script(src='/javascripts/tabsHandler.js')
    script(src='/javascripts/jquery-ui.js')
    script(src='/javascripts/mapHandler.js')
    script(src='/javascripts/postHandler.js')
    script(src='/angular/angular.min.js')
    script(src='/lib/angular-route.min.js')
    script(src='/app.js')
    script(src='/home/home.controller.js')
    script(src='/common/services/loc8rData.service.js')
    script(src='/common/services/geolocation.service.js')

  body(background=background)
    .navbar.navbar-default.navbar-fixed-top
      .navbar-header
        button.navbar-toggle(type='button', data-toggle='collapse', data-target='#bs-example-navbar-collapse-1')
          span.sr-only Toggle navigation
          span.icon-bar
          span.icon-bar
          span.icon-bar
        a.navbar-brand(href='/') Fete
      #bs-example-navbar-collapse-1.collapse.navbar-collapse
        ul.nav.navbar-nav
          li.active(ng-hide="navvm.isLoggedIn")
            a(href='#') Fete
          li.active(ng-show="navvm.isLoggedIn")
            a(href='#') {{ navvm.currentUser.name }}
          li
            a(href='#') Notifications
              
          li.dropdown
            a.dropdown-toggle(href='#', data-toggle='dropdown')
              | Account 
              b.caret
            ul.dropdown-menu
              li
                a(href='/profile') Profile
              li.divider
                a(href='/event') Events
              li
                a(href='/createevent') Create Events
              li.divider
              li
                a(href='/followers') Followers
              li.divider
              li
                a(href="ng-click="navvm.logout()") Logout
              li.divider
              li
                a(href='#') One more separated link

        .col-md-4.col-md-4
          form.navbar-form(role='search')
            .input-group
              input.form-control(type='text', placeholder='Search', name='naviSearch')
              .input-group-btn
                button.btn.btn-default(type='submit')
                  i.glyphicon.glyphicon-search
   .container
     block content

   block footer
